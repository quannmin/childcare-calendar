@page "/workhours/edit/{id:int}"
@rendermode InteractiveServer
@attribute [Authorize(Roles = "QuanLy")]

<h3>Chỉnh sửa chuyên khoa</h3>
<hr />

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger w-50">
        @ErrorMessage
    </div>
}

<EditForm Model="EditModel" OnValidSubmit="HandleUpdate" FormName="WorkHourUpdate" class="w-50">
    <DataAnnotationsValidator />

    <InputNumber hidden @bind-Value="EditModel.Id" />

	<div class="form-group m-2">
		<label class="control-label m-2">
			Giờ bắt đầu
			<span class="text-danger">*</span>
		</label>
		<input id="startTime"
			   class="form-control"
			   placeholder="Chọn giờ bắt đầu..."
			   @bind="EditModel.StartTime" />
		<ValidationMessage For="@(() => EditModel.StartTime)" class="text-danger" />
	</div>

	<div class="form-group m-2">
		<label class="control-label m-2">
			Giờ kết thúc
			<span class="text-danger">*</span>
		</label>
		<input id="endTime"
			   class="form-control"
			   placeholder="Chọn giờ kết thúc..."
			   @bind="EditModel.EndTime" />
		<ValidationMessage For="@(() => EditModel.EndTime)" class="text-danger" />
	</div>

    <div class="form-group row">
        <div class="col-md-8">
            <button type="submit" class="btn btn-success">Cập nhật</button>
        </div>
        <div class="col-md-4">
            <a class="btn btn-secondary" href="/workhours">
                Về trang quản lí khung giờ
            </a>
        </div>
    </div>
</EditForm>
