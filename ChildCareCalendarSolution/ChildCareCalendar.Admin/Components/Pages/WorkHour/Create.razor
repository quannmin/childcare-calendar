@page "/workhours/create"
@rendermode InteractiveServer

<h3>Tạo mới khung giờ</h3>
<hr />

@if (!string.IsNullOrEmpty(ErrorMessage))
{
	<div class="alert alert-danger w-50">
		@ErrorMessage
	</div>
}

<EditForm Model="CreateModel" OnValidSubmit="HandleCreate" FormName="WorkHourCreate" class="w-50">
	<DataAnnotationsValidator />

	<div class="form-group m-2">
		<label class="control-label m-2">
			Giờ bắt đầu
			<span class="text-danger">*</span>
		</label>
		<input id="startTime"
			   class="form-control"
			   placeholder="Chọn giờ bắt đầu..."
			   @bind="CreateModel.StartTime" />
		<ValidationMessage For="@(() => CreateModel.StartTime)" class="text-danger" />
	</div>

	<div class="form-group m-2">
		<label class="control-label m-2">
			Giờ kết thúc
			<span class="text-danger">*</span>
		</label>
		<input id="endTime"
			   class="form-control"
			   placeholder="Chọn giờ kết thúc..."
			   @bind="CreateModel.EndTime" />
		<ValidationMessage For="@(() => CreateModel.EndTime)" class="text-danger" />
	</div>

	<div class="form-group row">
		<div class="col-md-8">
			<button type="submit" class="btn btn-success">Tạo mới</button>
		</div>
		<div class="col-md-4">
			<a class="btn btn-secondary" href="/workhours">
				Về trang quản lí khung giờ
			</a>
		</div>
	</div>
</EditForm>