@page "/login"
@using System.Security.Claims
@inject ChildCareCalendar.Domain.EF.ChildCareCalendarContext appDbContext

<div class="row">
    <div class="col-lg-4">
        <EditForm Model="loginModel" OnValidSubmit="Authenticate">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="mb-3 text-center flex-column">
                <h3>Login</h3>
            </div>
            <div class="mb-3">
                <label>Email</label>
                <InputText @bind-Value="loginModel.Email" class="form-control" placeholder="Username" />
                <ValidationMessage For="() => loginModel.Email" />
            </div>
            <div class="mb-3">
                <lable>Password</lable>
                <InputText @bind-Value="loginModel.Password" placeholder="Password" type="password" class="form-control" />
                <ValidationMessage For="() => loginModel.Password" />
            </div>
            <div class="mb-3 text-center">
                <span class="text-danger">@errorMessage</span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </EditForm>
    </div>
</div>