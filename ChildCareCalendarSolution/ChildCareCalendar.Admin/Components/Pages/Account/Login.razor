@page "/login"
@using System.Security.Claims
@using ChildCareCalendar.Admin.Components.Layout
@inject ChildCareCalendar.Domain.EF.ChildCareCalendarContext appDbContext
@layout EmptyLayout
  
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Diamond Luxury System</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="/Admin/images/logo.jpg" />
    <!--===============================================================================================-->
    <link rel="stylesheet"
          type="text/css"
          href="Admin/vendor/bootstrap/css/bootstrap.min.css" 
          asp-append-version="true"/>
    <!--===============================================================================================-->
    <link rel="stylesheet"
          type="text/css"
          href="Admin/fonts/font-awesome-4.7.0/css/font-awesome.css" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="Admin/vendor/animate/animate.css" />
    <!--===============================================================================================-->
    <link rel="stylesheet"
          type="text/css"
          href="Admin/vendor/css-hamburgers/hamburgers.css" />
    <!--===============================================================================================-->
    <link rel="stylesheet"
          type="text/css"
          href="Admin/vendor/select2/select2.css" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="Admin/css/util.css" />
    <link rel="stylesheet" type="text/css" href="Admin/css/main.css" />
    <!--===============================================================================================-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Alegreya+Sans:ital,wght@0,100;0,300;0,400;0,500;0,700;0,800;0,900;1,100;1,300;1,400;1,500;1,700;1,800;1,900&display=swap"
          rel="stylesheet" />

</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt justify-content-center align-items-center" data-tilt>
                    <img src="Admin/images/logo.jpg" alt="IMG" />
                </div>

                <EditForm Model="loginModel" OnValidSubmit="Authenticate" FormName="HandleLogin">
                    <DataAnnotationsValidator />

                    <span class="login100-form-title"> Đăng nhập </span>
                    <!-- Login gg fb -->
                        <div class="wrap-input100 validate-input">
                            <InputText class="form-control" @bind-Value="loginModel.Email" />
                            <ValidationMessage For="@(() => loginModel.Email)" class="text-danger" />
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                            </span>
                        </div>
                    <div class="wrap-input100 validate-input">
                        <InputText class="form-control" @bind-Value="loginModel.Password" />
                        <ValidationMessage For="@(() => loginModel.Password)" class="text-danger" />
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="container-login100-form-btn">
                        <button type="submit" class="btn btn-success login100-form-btn">Đăng nhập</button>
                    </div>
                    @* <div class="text-center"> *@
                    @*     <a class="txt2" href="/Login/ForgotPassword">Quên mật khẩu </a> *@
                    @* </div> *@
                </EditForm>
            </div>
        </div>
    </div>
    <!--===============================================================================================-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!--===============================================================================================-->
    <script src="Admin/vendor/bootstrap/js/popper.js"></script>
    <script src="Admin/vendor/bootstrap/js/bootstrap.js"></script>
    <!--===============================================================================================-->
    <script src="Admin/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="Admin/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $(".js-tilt").tilt({
            scale: 1.1,
        });
    </script>
    <!--===============================================================================================-->
    <script src="Admin/js/main.js"></script>

</body>
</html>