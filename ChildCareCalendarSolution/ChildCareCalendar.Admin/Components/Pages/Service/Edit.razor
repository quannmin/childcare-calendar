@page "/specialities/detail/{specialityId:int}/services/edit/{serviceId:int}"


<h3>Chỉnh sửa dịch vụ</h3>
<hr />

<EditForm Model="EditModel" OnValidSubmit="HandleUpdate" FormName="ServiceUpdate" class="w-50">
    <DataAnnotationsValidator />

    <InputNumber hidden @bind-Value="EditModel.Id" />
    <InputNumber hidden @bind-Value="EditModel.SpecialityId" />

    <div class="form-group m-2">
        <label class="control-label m-2">
            Tên dịch vụ
            <span class="text-danger">*</span>
        </label>

        <InputNumber hidden @bind-Value="EditModel.Id" />

        <InputText class="form-control"
                   @bind-Value="EditModel.ServiceName"
                   placeholder="Nhập tên dịch vụ..." />
        <ValidationMessage For="@(() => EditModel.ServiceName)" class="text-danger" />
    </div>

    <div class="form-group m-2">
        <label class="control-label m-2">Mô tả</label>
        <InputTextArea class="form-control"
                       @bind-Value="EditModel.Description"
                       placeholder="Nhập mô tả dịch vụ..." />
        <ValidationMessage For="@(() => EditModel.Description)" class="text-danger" />
    </div>

    <div class="form-group m-2">
        <label class="control-label m-2">
            Giá
            <span class="text-danger">*</span>
        </label>
        <InputNumber class="form-control"
                     @bind-Value="EditModel.Price"
                     placeholder="Nhập giá dịch vụ..." />
        <ValidationMessage For="@(() => EditModel.Price)" class="text-danger" />
    </div>

    <div class="form-group row">
        <div class="col-md-8">
            <button type="submit" class="btn btn-success">Cập nhật</button>
        </div>
        <div class="col-md-4">
            <a class="btn btn-secondary" href="/specialities">
                Về trang chi tiết chuyên khoa
            </a>
        </div>
    </div>
</EditForm>
