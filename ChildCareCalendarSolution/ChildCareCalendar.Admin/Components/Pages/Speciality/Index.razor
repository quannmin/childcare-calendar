@page "/specialities"
@rendermode InteractiveServer

<h3>Quản lý Chuyên khoa</h3>

<div class="row mb-4">
	<div class="col-md-4">
		@if (Specialities.Any())
		{
			<NavLink class="btn btn-success" href="/specialities/create">Tạo mới</NavLink>
		}
	</div>

	<div class="col-md-5 offset-md-3">
		<EditForm Model="SearchData" OnValidSubmit="HandleSearch" FormName="SearchSpecialy">
			<DataAnnotationsValidator />
			<ValidationSummary />

			<div class="d-flex">
				<InputText class="form-control me-2" @bind-Value="SearchData.Keyword" placeholder="Tìm kiếm chuyên khoa..." />
				<button type="submit" class="btn btn-primary searchBtn w-25">Tìm kiếm</button>
			</div>
		</EditForm>
	</div>
</div>

@if (Specialities.Count == 0)
{
	<div class="text-center mt-5">
		<i class="bi bi-exclamation-circle text-secondary display-3"></i>
		<h3 class="text-muted mt-3">Không có dữ liệu.</h3>
		<div class="mt-4">
			<NavLink href="/specialities/create" class="btn btn-success me-2">
				<i class="bi bi-plus-circle"></i> Tạo chuyên khoa
			</NavLink>
			<NavLink href="/" class="btn btn-outline-secondary">
				<i class="bi bi-house-door"></i> Về trang chủ
			</NavLink>
		</div>
	</div>
}
else
{
	<table class="table table-bordered table-hover text-center border-2">
		<thead class="table-dark">
			<tr class="bg-white">
				<th>Tên chuyên khoa</th>
				<th>Mô tả</th>
				<th>Người tạo</th>
				<th>Ngày tạo</th>
				<th>Trạng thái</th>
				<th>Thao tác</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Specialities)
			{
				<tr>
					<td>@item.SpecialtyName</td>
					<td>@item.Description</td>
					<td>@item.CreatedBy</td>
					<td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
					<td class="@(item.IsDelete ? "text-danger" : "text-success")">
						@(item.IsDelete ? "Đã xóa" : "Đang hoạt động")
					</td>

					<td class="d-flex justify-content-evenly">
						<NavLink class="btn btn-info btn-sm" href="@($"/specialities/detail/{item.Id}")">Chi tiết</NavLink>
						<NavLink class="btn btn-warning btn-sm" href="@($"/specialities/edit/{item.Id}")">Chỉnh sửa</NavLink>
						<button class="btn btn-danger btn-sm" @onclick="() => ConfirmDelete(item.Id)">Xóa</button>
					</td>
				</tr>
			}
		</tbody>
	</table>
}

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				Bạn có chắc chắn muốn xóa chuyên khoa này không?
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
				<button type="button" class="btn btn-danger" @onclick="DeleteSpeciality">Xóa</button>
			</div>
		</div>
	</div>
</div>

<script>
	function showDeleteModal() {
		var modalElement = document.getElementById('deleteModal');
		if (!modalElement) {
			console.error("Lỗi: Không tìm thấy modal với id 'deleteModal'.");
			return;
		}
		var modal = new bootstrap.Modal(modalElement);
		modal.show();
	}

	function hideDeleteModal() {
		var modalElement = document.getElementById('deleteModal');
		if (!modalElement) {
			console.error("Lỗi: Không tìm thấy modal với id 'deleteModal'.");
			return;
		}
		var modal = bootstrap.Modal.getInstance(modalElement) || new bootstrap.Modal(modalElement);
		modal.hide();
	}
</script>