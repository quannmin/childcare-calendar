@page "/specialities/edit/{id:int}"

<h3>Chỉnh sửa chuyên khoa</h3>
<hr />

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger" style="width: 50%;">
        @ErrorMessage
    </div>
}

<EditForm Model="@EditModel" OnValidSubmit="HandleUpdate" FormName="SpecialityUpdate" style="width: 50%;">
    <DataAnnotationsValidator />

    <InputNumber hidden @bind-Value="EditModel.Id" />

    <div class="form-group m-2">
        <label class="control-label m-2">
            Tên chuyên khoa
            <span class="text-danger">*</span>
        </label>
        <InputText class="form-control"
                   @bind-Value="EditModel.SpecialtyName"
                   placeholder="Nhập tên chuyên khoa..." />
        <ValidationMessage For="@(() => EditModel.SpecialtyName)" class="text-danger" />
    </div>

    <div class="form-group m-2">
        <label class="control-label m-2">Mô tả</label>
        <InputTextArea class="form-control"
                       @bind-Value="EditModel.Description"
                       placeholder="Nhập mô tả chuyên khoa..." />
        <ValidationMessage For="@(() => EditModel.Description)" class="text-danger" />
    </div>

    <div class="form-group row">
        <div class="col-md-8">
            <button type="submit" class="btn btn-success">Cập nhật</button>
        </div>
        <div class="col-md-4">
            <a class="btn btn-secondary" href="/specialities">
                Về trang quản lí chuyên khoa
            </a>
        </div>
    </div>
</EditForm>
