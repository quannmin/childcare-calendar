@page "/specialities/create"
@using ChildCareCalendar.Domain.ViewModels

<h3>Tạo mới danh mục</h3>
<hr />

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger">@ErrorMessage</div>
}

<EditForm Model="createModel" OnValidSubmit="HandleCreate" FormName="HandleCreate">
    <DataAnnotationsValidator />
    
    <div class="form-group m-2">
        <label class="control-label m-2">Tên chuyên khoa</label>
        <InputText class="form-control" @bind-Value="createModel.SpecialtyName" />
        <ValidationMessage For="@(() => createModel.SpecialtyName)" class="text-danger" />
    </div>

    <div class="form-group m-2">
        <label class="control-label m-2">Loại danh mục</label>
        <InputText class="form-control" @bind-Value="createModel.Description" />
        <ValidationMessage For="@(() => createModel.Description)" class="text-danger" />
    </div>

    <div class="form-group row">
        <div class="col-md-8">
            <button type="submit" class="btn btn-success">Tạo mới</button>
        </div>
        <div class="col-md-4">
            <a type="button" class="btn btn-secondary" href="/specialities">
                Về trang quản lí danh mục
            </a>
        </div>
    </div>
</EditForm>