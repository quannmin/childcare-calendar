@page "/childrenRecords/edit/{id:int}"
@rendermode InteractiveServer

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="w-50">
        <h3 class="text-center mb-4">Chỉnh sửa hồ sơ trẻ em</h3>

        @if (ChildRecord == null)
        {
            <p class="text-center">Đang tải dữ liệu...</p>
        }
        else
        {
            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger text-center">
                    @ErrorMessage
                </div>
            }

            <EditForm Model="ChildRecord" OnValidSubmit="SaveChanges">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label class="form-label">Tên bé</label>
                    <InputText class="form-control" @bind-Value="ChildRecord.FullName" />
                    <ValidationMessage For="@(() => ChildRecord.FullName)" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Ngày sinh</label>
                    <InputDate class="form-control" @bind-Value="ChildRecord.Dob" />
                    <ValidationMessage For="@(() => ChildRecord.Dob)" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Giới tính</label>
                    <InputSelect class="form-control" @bind-Value="ChildRecord.Gender">
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </InputSelect>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tiền sử bệnh</label>
                    <InputTextArea class="form-control" @bind-Value="ChildRecord.MedicalHistory" />
                </div>

                <!-- Căn chỉnh nút hành động -->
                <div class="d-flex justify-content-between form-actions">
                    <button type="submit" class="btn btn-success">Lưu</button>
                    <button type="button" class="btn btn-secondary" @onclick="Cancel">Hủy</button>
                </div>
            </EditForm>
        }
    </div>
</div>
<style>
    /* Tiêu đề form căn giữa */
    .form-title {
        text-align: center;
        font-weight: bold;
        margin-bottom: 20px;
    }

    /* Nhãn và input */
    label {
        font-weight: 600;
        color: #333;
        margin-bottom: 6px;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px 12px;
        font-size: 14px;
        border: 1px solid #ccc;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #00bcd4;
            box-shadow: 0 0 0 3px rgba(0, 188, 212, 0.15);
        }

    /* Validation */
    .text-danger {
        font-size: 13px;
        margin-top: 4px;
    }

    /* Nút hành động cùng hàng */
    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 15px;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 15px;
        border: none;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    /* Alert lỗi */
    .alert-danger {
        border-radius: 8px;
        padding: 12px;
        font-size: 14px;
        text-align: center;
        width: 100%;
        max-width: 600px;
        margin: 0 auto 20px auto;
    }
</style>

