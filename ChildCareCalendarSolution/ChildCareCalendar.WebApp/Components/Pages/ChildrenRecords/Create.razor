@page "/childrenRecords/create"
@using ChildCareCalendar.Utilities.Constants
@rendermode InteractiveServer

<h3>Tạo mới hồ sơ bé </h3>
<hr />

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger">
        @ErrorMessage
    </div>
}

<div class="form-wrapper">
    <EditForm Model="CreateModel" OnValidSubmit="HandleCreate" FormName="ChildrenRecordCreate" class="child-form">
        <DataAnnotationsValidator />

        <!-- Họ và tên -->
        <div class="form-group m-2">
            <label class="control-label">Họ và tên <span class="text-danger">*</span></label>
            <InputText class="form-control" @bind-Value="CreateModel.FullName" />
            <ValidationMessage For="@(() => CreateModel.FullName)" class="text-danger" />
        </div>

        <!-- Ngày tháng năm sinh -->
        <div class="form-group m-2">
            <label class="control-label">Ngày tháng năm sinh <span class="text-danger">*</span></label>
            <InputDate class="form-control" @bind-Value="CreateModel.Dob" />
            <ValidationMessage For="@(() => CreateModel.Dob)" class="text-danger" />
        </div>

        <!-- Giới tính -->
        <div class="form-group m-2">
            <label class="control-label">Giới tính</label>
            <InputSelect class="form-control" @bind-Value="CreateModel.Gender">
                <option value="@SystemConstant.Gender.Nam">Nam</option>
                <option value="@SystemConstant.Gender.Nữ">Nữ</option>
            </InputSelect>
        </div>

        <!-- Tiền sử bệnh -->
        <div class="form-group m-2">
            <label class="control-label">Tiền sử bệnh</label>
            <InputTextArea class="form-control" @bind-Value="CreateModel.MedicalHistory" />
        </div>

        <!-- Nút hành động -->
        <div class="form-actions">
            <button type="submit" class="btn btn-success">Tạo mới</button>
            <a class="btn btn-secondary" href="/AccountDetail">Về danh sách hồ sơ</a>
        </div>
    </EditForm>
</div>

<style>
    /* Căn giữa form toàn trang */
    .form-wrapper {
        display: flex;
        justify-content: center;
        align-items: start;
        min-height: 80vh;
    }

    /* Form đẹp hơn */
    .child-form {
        background-color: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
        width: 100%;
        max-width: 600px;
    }

    /* Tiêu đề form căn giữa */
    .form-title {
        text-align: center;
        font-weight: bold;
        margin-bottom: 20px;
    }

    /* Nhãn và input */
    label {
        font-weight: 600;
        color: #333;
        margin-bottom: 6px;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px 12px;
        font-size: 14px;
        border: 1px solid #ccc;
        transition: border-color 0.3s ease;
    }

    .form-control:focus {
        border-color: #00bcd4;
        box-shadow: 0 0 0 3px rgba(0, 188, 212, 0.15);
    }

    /* Validation */
    .text-danger {
        font-size: 13px;
        margin-top: 4px;
    }

    /* Nút hành động cùng hàng */
    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 15px;
        border: none;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 15px;
        border: none;
        text-decoration: none;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    /* Alert lỗi */
    .alert-danger {
        border-radius: 8px;
        padding: 12px;
        font-size: 14px;
        text-align: center;
        width: 100%;
        max-width: 600px;
        margin: 0 auto 20px auto;
    }
</style>
